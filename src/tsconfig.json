{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["front/*", "server/*"]
    },
    "lib": ["es5", "es6"],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true
  }
}
