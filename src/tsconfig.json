{
  "compilerOptions": {
    // 最新のECMAScript仕様に対応
    "target": "esnext",
    "moduleResolution": "node",
    // 厳格な型チェックを有効にする
    "strict": true,
    // CommonJSモジュールとの互換性を確保
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["server/*", "front/*", "shared/*"]
    },
    "sourceMap": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": true
  },
  // 対象となるファイル
  "include": ["../src/**/*.ts", "../src/**/*.vue"],
  // 除外するファイル
  "exclude": ["node_modules"]
}
